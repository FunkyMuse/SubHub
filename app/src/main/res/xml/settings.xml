<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/customizations">

        <Preference
            app:iconSpaceReserved="false"
            app:key="settings_pref_language"
            app:singleLineTitle="true"
            app:summary="@string/preferred_language_expl"
            app:title="@string/preferred_language" />

    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/content">


        <Preference
            app:iconSpaceReserved="false"
            app:key="settings_pref_other_apps"
            app:title="@string/my_other_apps" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="settings_pref_version_code"
            app:title="@string/version" />

    </PreferenceCategory>


</PreferenceScreen>