<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/helperColor</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColorSecondary">@color/disabledColor</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/disabledColor</item>
        <item name="android:textColor">@color/helperColor</item>
    </style>


</resources>
